<Page
    x:Class="PersonalTrainer_Client.Flows.Workout.WorkoutSummary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PersonalTrainer_Client.Flows.Workout"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/background.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>

            <RowDefinition Height="*"/>

            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0">

            <TextBlock x:ConnectionId='4' Name="Title" HorizontalAlignment="Center" Text="Workout Summary" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,16,0,16" Foreground="Green" FontSize="22" FontWeight="Bold"/>

            <Grid>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="16,0,8,0" Grid.Column="0" Orientation="Vertical" Background="#44d3d3d3">

                    <Image Margin="0,16,0,0" HorizontalAlignment="Center" Width="70" Height="80" Source="ms-appx:///Images/repetition.png"/>

                    <TextBlock x:ConnectionId='11' HorizontalAlignment="Center" VerticalAlignment="Center" Name="Time" Text="Time: " Margin="0,2,0,0" FontSize="15"/>

                    <TextBlock x:ConnectionId='12' HorizontalAlignment="Center" VerticalAlignment="Center" Name="NumOfEx" Text="Exc.: " Margin="0,0,0,2"  FontSize="15"/>

                </StackPanel>

                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="8,0,8,0" Grid.Column="1" Orientation="Vertical" Background="#44d3d3d3">

                    <Image Margin="0,16,0,0" HorizontalAlignment="Center" Width="70" Height="80" Source="ms-appx:///Images/heart_rate.png"/>

                    <TextBlock x:ConnectionId='9' HorizontalAlignment="Center" VerticalAlignment="Center" Name="heartRate" Text="Avg.: " Margin="0,2,0,0"  FontSize="15"/>

                    <TextBlock x:ConnectionId='10' HorizontalAlignment="Center" VerticalAlignment="Center" Name="peak_heart_rate" Text="Peak: " Margin="0,0,0,2" FontSize="15"/>

                </StackPanel>

                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="8,0,16,0" Grid.Column="2" Orientation="Vertical" Background="#44d3d3d3">

                    <Image Margin="0,16,0,0" HorizontalAlignment="Center" Width="80" Height="80" Source="ms-appx:///Images/calories.png"/>

                    <TextBlock x:ConnectionId='7' HorizontalAlignment="Center" VerticalAlignment="Center" Name="calories" Text="Cal.: " Margin="0,2,0,0" FontSize="15"/>

                    <TextBlock x:ConnectionId='8' HorizontalAlignment="Center" VerticalAlignment="Center" Name="sweat" Text="Sweat: " Margin="0,0,0,2"  FontSize="15"/>

                </StackPanel>

            </Grid>

            <Grid Background="#44d3d3d3" Margin="16" Height="108">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <Image x:ConnectionId='5' Name="feedback_image" Width="100" Margin="4" VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Visible" Grid.Column="0"/>

                <TextBlock x:ConnectionId='6' Name="CompareToStat" HorizontalAlignment="Stretch" Text="" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Margin="8"  FontSize="12" Grid.Column="1"/>

            </Grid>

        </StackPanel>

        <StackPanel Grid.Row="1">

            <Button x:ConnectionId='1' Name="UserStatistics" Margin="32,8,32,8" HorizontalAlignment="Stretch" VerticalAlignment="Center"  Grid.Row="4" Content="Previous Workouts Statistics"                              Visibility="Collapsed" FontSize="20" BorderBrush="White" BorderThickness="2" Padding="8"/>
            <Button x:ConnectionId='2' Name="OtherUsersStatistics" Margin="32,8,32,8" HorizontalAlignment="Stretch" VerticalAlignment="Center"  Grid.Row="4" Content="See How Others Performed"                                    Visibility="Collapsed" FontSize="20" BorderBrush="White" BorderThickness="2" Padding="8"/>
            <Button x:ConnectionId='3' Name="MainDashboardReturn" Margin="32,8,32,16" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"  Grid.Row="4" Content="Main Dashboard"                                   FontSize="20" BorderBrush="White" BorderThickness="2" Padding="8"/>

        </StackPanel>
        
    </Grid>
    
</Page>

