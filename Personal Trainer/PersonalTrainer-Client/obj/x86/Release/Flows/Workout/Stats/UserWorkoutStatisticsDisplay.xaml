<Page
    x:Class="PersonalTrainer_Client.Flows.Workout.Stats.UserWorkoutStatisticsDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PersonalTrainer_Client.Flows.Workout.Stats"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/background.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0">

            <TextBlock x:ConnectionId='2' Name="Title" HorizontalAlignment="Center" Text="Previous Workouts Statistics" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,16,0,16" Foreground="Green" FontSize="22" FontWeight="Bold"/>

            <Grid>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="16,0,8,0" Grid.Column="0" Orientation="Vertical" Background="#44d3d3d3">

                    <Image Margin="0,16,0,0" HorizontalAlignment="Center" Width="70" Height="80" Source="ms-appx:///Images/repetition.png"/>

                    <TextBlock x:ConnectionId='7' HorizontalAlignment="Center" VerticalAlignment="Center" Name="Time" Text="Time: " Margin="0,2,0,0" FontSize="15"/>

                    <TextBlock x:ConnectionId='8' HorizontalAlignment="Center" VerticalAlignment="Center" Name="NumOfEx" Text="Exc.: " Margin="0,0,0,2"  FontSize="15"/>

                </StackPanel>

                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="8,0,8,0" Grid.Column="1" Orientation="Vertical" Background="#44d3d3d3">

                    <Image Margin="0,16,0,0" HorizontalAlignment="Center" Width="70" Height="80" Source="ms-appx:///Images/heart_rate.png"/>

                    <TextBlock x:ConnectionId='5' HorizontalAlignment="Center" VerticalAlignment="Center" Name="heartRate" Text="Avg.: " Margin="0,2,0,0"  FontSize="15"/>

                    <TextBlock x:ConnectionId='6' HorizontalAlignment="Center" VerticalAlignment="Center" Name="peak_heart_rate" Text="Peak: " Margin="0,0,0,2" FontSize="15"/>

                </StackPanel>

                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="8,0,16,0" Grid.Column="2" Orientation="Vertical" Background="#44d3d3d3">

                    <Image Margin="0,16,0,0" HorizontalAlignment="Center" Width="80" Height="80" Source="ms-appx:///Images/calories.png"/>

                    <TextBlock x:ConnectionId='3' HorizontalAlignment="Center" VerticalAlignment="Center" Name="calories" Text="Cal.: " Margin="0,2,0,0" FontSize="15"/>

                    <TextBlock x:ConnectionId='4' HorizontalAlignment="Center" VerticalAlignment="Center" Name="sweat" Text="Sweat: " Margin="0,0,0,2"  FontSize="15"/>

                </StackPanel>

            </Grid>

        </StackPanel>

        <Charting:Chart x:ConnectionId='1' Grid.Row="1" x:Name="LineChart" FontSize="15" Title="Statistics per workout number" Background="#44d3d3d3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="16" >
            <Charting:LineSeries Title="Time in&#x0d;&#x0a;minutes" Margin="0" IndependentValuePath="Name" DependentValuePath="Amount"/>
            <Charting:LineSeries Title="Exercises&#x0d;&#x0a;completed&#x0d;&#x0a;precentage" Margin="0" IndependentValuePath="Name" DependentValuePath="Amount"/>
            <Charting:LineSeries Title="Average&#x0d;&#x0a;heart rate" Margin="0" IndependentValuePath="Name" DependentValuePath="Amount"/>
            <Charting:LineSeries Title="Peak&#x0d;&#x0a;heart rate" Margin="0" IndependentValuePath="Name" DependentValuePath="Amount"/>
            <Charting:Chart.Palette>
                <Charting:ResourceDictionaryCollection>
                    <!-- Blue -->
                    <ResourceDictionary>
                        <SolidColorBrush
            x:Key="Background"
            Color="Blue" />
                        <Style
            x:Key="DataPointStyle"
            TargetType="Control">
                            <Setter
                Property="Background"
                Value="{StaticResource Background}" />
                        </Style>
                        <Style
            x:Key="DataShapeStyle"
            TargetType="Shape">
                            <Setter
                Property="Stroke"
                Value="White" />
                            <Setter
                Property="StrokeThickness"
                Value="4" />
                            <Setter
                Property="StrokeMiterLimit"
                Value="1" />
                            <Setter
                Property="Fill"
                Value="{StaticResource Background}" />
                        </Style>
                    </ResourceDictionary>
                    <!-- Green -->
                    <ResourceDictionary>
                        <SolidColorBrush
            x:Key="Background"
            Color="Green" />
                        <Style
            x:Key="DataPointStyle"
            TargetType="Control">
                            <Setter
                Property="Background"
                Value="{StaticResource Background}" />
                        </Style>
                        <Style
            x:Key="DataShapeStyle"
            TargetType="Shape">
                            <Setter
                Property="Stroke"
                Value="White" />
                            <Setter
                Property="StrokeThickness"
                Value="4" />
                            <Setter
                Property="StrokeMiterLimit"
                Value="1" />
                            <Setter
                Property="Fill"
                Value="{StaticResource Background}" />
                        </Style>
                    </ResourceDictionary>
                    <!-- Red -->
                    <ResourceDictionary>
                        <SolidColorBrush
            x:Key="Background"
            Color="Red" />
                        <Style
            x:Key="DataPointStyle"
            TargetType="Control">
                            <Setter
                Property="Background"
                Value="{StaticResource Background}" />
                        </Style>
                        <Style
            x:Key="DataShapeStyle"
            TargetType="Shape">
                            <Setter
                Property="Stroke"
                Value="White" />
                            <Setter
                Property="StrokeThickness"
                Value="4" />
                            <Setter
                Property="StrokeMiterLimit"
                Value="1" />
                            <Setter
                Property="Fill"
                Value="{StaticResource Background}" />
                        </Style>
                    </ResourceDictionary>

                    <!-- Dark Red -->
                    <ResourceDictionary>
                        <SolidColorBrush
            x:Key="Background"
            Color="DarkRed" />
                        <Style
            x:Key="DataPointStyle"
            TargetType="Control">
                            <Setter
                Property="Background"
                Value="{StaticResource Background}" />
                        </Style>
                        <Style
            x:Key="DataShapeStyle"
            TargetType="Shape">
                            <Setter
                Property="Stroke"
                Value="White" />
                            <Setter
                Property="StrokeThickness"
                Value="4" />
                            <Setter
                Property="StrokeMiterLimit"
                Value="1" />
                            <Setter
                Property="Fill"
                Value="{StaticResource Background}" />
                        </Style>
                    </ResourceDictionary>
                </Charting:ResourceDictionaryCollection>
            </Charting:Chart.Palette>
        </Charting:Chart>

    </Grid>


</Page>

