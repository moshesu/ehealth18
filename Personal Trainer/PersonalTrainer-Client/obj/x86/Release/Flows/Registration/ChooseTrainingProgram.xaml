<Page
    x:Class="PersonalTrainer_Client.Flows.Registration.ChooseTrainingProgram"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PersonalTrainer_Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="*"/>

            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/background.jpg"/>
        </Grid.Background>

        <ScrollViewer>
        <StackPanel>
            <TextBlock Margin="0,16,0,16" HorizontalAlignment="Center" Text="Pick a program" Grid.Row="0" FontSize="40"  Foreground="Green"/>
                <StackPanel x:ConnectionId='1' Name="FirstStack" BorderBrush="Green" BorderThickness="4">
                    <RadioButton x:ConnectionId='11' Name="FirstOption" Margin="16,0,16,0" HorizontalAlignment="Left" VerticalAlignment="Top"                           IsChecked="True"/>
                    <Button x:ConnectionId='12' Name="FirstButton"                     Background="Transparent" Padding="0">
                        <Image x:ConnectionId='13' Name="FirstImage"/>
                    </Button>
                </StackPanel>
                <StackPanel x:ConnectionId='2' Name="SecondStack" BorderBrush="Green">
                    <RadioButton x:ConnectionId='8' Name="SecondOption" Margin="16,0,16,0"  HorizontalAlignment="Left" VerticalAlignment="Top"                           IsChecked="False"/>
                    <Button x:ConnectionId='9' Name="SecondButton"                     Background="Transparent" Padding="0">
                        <Image x:ConnectionId='10' Name="SecondImage"/>
                    </Button>
                </StackPanel>
                <StackPanel x:ConnectionId='3' Name="ThirdStack" BorderBrush="Green">
                    <RadioButton x:ConnectionId='5' Name="ThirdOption" Margin="16,0,16,0"  HorizontalAlignment="Left" VerticalAlignment="Top"                           IsChecked="False"/>
                    <Button x:ConnectionId='6' Name="ThirdButton"                     Background="Transparent" Padding="0">
                        <Image x:ConnectionId='7' Name="ThirdImage"/>
                    </Button>
                </StackPanel>
            
            
            
            <Button x:ConnectionId='4' Name="Save" Background="Green" FontWeight="Bold" Foreground="White" FontSize="20" Content="Save and continue" HorizontalAlignment="Stretch" Margin="64,16,64,16" Padding="8" VerticalAlignment="Bottom"                      BorderBrush="Green" IsEnabled="false"/>
            </StackPanel>
        </ScrollViewer>
        
        
    
    </Grid>
</Page>

