<Page
    x:Class="PersonalTrainer_Client.Flows.Workout.WorkoutDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PersonalTrainer_Client.Flows.Workout"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   NavigationCacheMode="Required">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*"/>

            <RowDefinition Height="Auto"/>


        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/background.jpg"/>
        </Grid.Background>

        <StackPanel Margin="16" Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="Total Time:" Margin="0,0,6,0" Foreground="Green" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="20"/>
            <TextBlock x:ConnectionId='6'  Name="time" Text="00:00" VerticalAlignment="Bottom" FontSize="20" />
            <TextBlock Text="Calories:" Margin="32,0,6,0" Foreground="Green" VerticalAlignment="Bottom" FontWeight="Bold" FontSize="20"/>
            <TextBlock x:ConnectionId='7'  Name="calories" Text="0" VerticalAlignment="Bottom" FontSize="20" />
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock x:ConnectionId='4' Name="NextEx" HorizontalAlignment="center" Text="Next Exercise: " Foreground="Green" FontWeight="Bold" FontSize="20" Margin="8"/>
            <Button x:ConnectionId='5' Name="StartExercise" Content="Start Exercise" HorizontalAlignment="Stretch" VerticalAlignment="Center"                             IsEnabled="False" Padding="16" Margin="64,16,64,16" FontSize="20" BorderBrush="White" BorderThickness="2"/>
           

        </StackPanel>

        <StackPanel Grid.Row="2">
            <Button x:ConnectionId='2' Name="WorkoutDetails" Content="Workout details" HorizontalAlignment="Stretch" VerticalAlignment="Center"                               IsEnabled="False" Margin="64,0,64,8"  Padding="16" FontSize="20" BorderBrush="White" BorderThickness="2"/>
            <Button x:ConnectionId='3' Name="Finish" Content="Finish Workout" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"                      IsEnabled="False"  Margin="64,8,64,32" Padding="16" FontSize="20" BorderBrush="White" BorderThickness="2"/>
        </StackPanel>



        <MediaElement x:ConnectionId='1' x:Name="media" />

    </Grid>


</Page>

