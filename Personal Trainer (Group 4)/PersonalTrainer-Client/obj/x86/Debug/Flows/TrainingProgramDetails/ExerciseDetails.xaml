<Page
    x:Class="PersonalTrainer_Client.Flows.TrainingProgramDetails.ExerciseDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PersonalTrainer_Client.Flows.TrainingProgramDetails"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="7*" />

            <RowDefinition Height="*" />

            <RowDefinition Height="*" />

            <RowDefinition Height="*" />

            <RowDefinition Height="*" />

            <RowDefinition Height="*" />

            <RowDefinition Height="*" />

            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/background.jpg"/>
        </Grid.Background>

        <Image x:ConnectionId='1' Name ="GuidImage" HorizontalAlignment="Center" Grid.Row="0" Stretch="Uniform"/>
        <TextBlock x:ConnectionId='2' Name="Name" HorizontalAlignment="Center" VerticalAlignment="Center" Text="" TextWrapping="Wrap" Margin="0,0,0,0" Foreground="Green" FontWeight="Bold" Grid.Row="1" FontSize="25"/>
        <TextBlock x:ConnectionId='3' Name="MuscleTitle" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Main Muscle" TextWrapping="Wrap" Foreground="Green"   Grid.Row="2"/>
        <TextBlock x:ConnectionId='4' Name="Muscle" HorizontalAlignment="Center" VerticalAlignment="Top" Text="" TextWrapping="Wrap"  Grid.Row="3"/>
        <TextBlock x:ConnectionId='5' Name="SetsTitle" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Number of Sets" TextWrapping="Wrap" Foreground="Green"   Grid.Row="4"/>
        <TextBlock x:ConnectionId='6' Name="Sets" HorizontalAlignment="Center" VerticalAlignment="Top" Text="" TextWrapping="Wrap"   Grid.Row="5"/>
        <TextBlock x:ConnectionId='7' Name="RepsTitle" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Number of repetitions" TextWrapping="Wrap" Foreground="Green"   Grid.Row="6"/>
        <TextBlock x:ConnectionId='8' Name="Reps" HorizontalAlignment="Center" VerticalAlignment="Top" Text="" TextWrapping="Wrap"    Grid.Row="7"/>

    </Grid>
</Page>

