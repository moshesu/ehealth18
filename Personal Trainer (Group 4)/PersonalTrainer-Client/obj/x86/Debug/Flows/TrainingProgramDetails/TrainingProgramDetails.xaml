<Page
    x:Class="PersonalTrainer_Client.Flows.TrainingProgramDetails.TrainingProgramDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PersonalTrainer_Client.Flows.TrainingProgramDetails"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="Auto"/>
            
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/background.jpg"/>
        </Grid.Background>

        <StackPanel Grid.Column="0">
            <TextBlock x:ConnectionId='5' Name="Title1" HorizontalAlignment="Center" Text="Workouts" VerticalAlignment="Top" Margin="0,40,0,0" Foreground="Green" FontSize="25"/>
            <ListView x:ConnectionId='6'  Name="workoutList"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="center" Width="Auto" IsItemClickEnabled="True"                                        >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="16,4,16,4"/>
                        <Setter Property="HorizontalContentAlignment"  Value="Stretch"></Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate                      >
                        <Grid x:ConnectionId='7' Background="#44d3d3d3" HorizontalAlignment="Stretch" BorderBrush="White" BorderThickness="2">
                            <TextBlock x:ConnectionId='8'                 TextAlignment="Center" FontSize="15" Padding="8"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <StackPanel Grid.Column="1" Width="2" Background="White"/>

        <StackPanel Grid.Column="2">
            <TextBlock x:ConnectionId='1' Name="Title2" HorizontalAlignment="Center" Text="Exercises" VerticalAlignment="Top" Margin="0,40,0,0"  Foreground="Green" FontSize="25"/>
            <ListView x:ConnectionId='2'  Name="exercisesList" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="center" Width="Auto" IsItemClickEnabled="True"                                    >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="16,4,16,4"/>
                        <Setter Property="HorizontalContentAlignment"  Value="Stretch"></Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate                      >
                        <Grid x:ConnectionId='3' Background="#44d3d3d3" HorizontalAlignment="Stretch" BorderBrush="White" BorderThickness="2">
                            <TextBlock x:ConnectionId='4'                 TextAlignment="Center" FontSize="15" Padding="8"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>


    </Grid>
</Page>

